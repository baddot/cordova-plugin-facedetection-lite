<?xml version='1.0' encoding='utf-8'?>
<widget id="br.com.employer.1" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>FaceDetector</name>
    <description>
        A sample Apache Cordova application.
    </description>
    <author email="luis@luisdemarchi.com.br" href="http://robotimize.com.br">
        Luis De Marchi
    </author>
    <content src="index.html" />
    <allow-navigation href="*" />
    <allow-intent href="*" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <config-file overwrite="true" parent="NSCameraUsageDescription" platform="ios" target="*-Info.plist">
        <string>Allow the app to use your camera</string>
    </config-file>
    <preference name="websecurity" value="disable" />
</widget>
